# Wedding Portal Environment Variables
# Copy this file to .env.local and update the values for your environment

# API Configuration
# Main URL hostname for your REST API (configure this centrally)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000

# Development Settings
VITE_ENABLE_DEV_TOOLS=true

# Optional: External Services (add as needed)
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key
# VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_key
# VITE_FIREBASE_API_KEY=your_firebase_key